  "compilerOptions": {
    "target": "es2022",
    "module": "ESNext",
    "outDir": "build",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*"]
}
